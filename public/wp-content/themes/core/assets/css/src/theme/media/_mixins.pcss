/* -----------------------------------------------------------------------------
 *
 * Media: Overlay
 *
 * ----------------------------------------------------------------------------- */

@define-mixin image-overlay {
	/* to be used in an afer element */
	content: '';
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}
