/* -----------------------------------------------------------------------------
 *
 * Component: Slider
 *
 * ----------------------------------------------------------------------------- */

.c-slider {
	width: 100%;
	position: relative;

	.t-content & {
		margin: var(--spacer-70) auto;
		max-width: none;
	}

	/* CASE: Dialog */
	.c-dialog & {
		margin: 0 auto;

		@media (--viewport-medium) {
			margin: 0 auto;
		}
	}
}

.c-slider__wrapper {
	/* CASE: Dialog */
	.c-dialog & {
		padding: var(--spacer-30) 0 var(--spacer-70);

		@media (--viewport-full) {
			align-items: center;
		}
	}
}

/* -----------------------------------------------------------------------------
 *
 * Main Slider
 *
 * ----------------------------------------------------------------------------- */

.c-slider__main {

	&:not(.initialized) {

		.c-slider__slide {
			display: none;

			&:first-child {
				display: block;
			}
		}
	}
}

/* -----------------------------------------------------------------------------
 *
 * Slider Carousel
 *
 * ----------------------------------------------------------------------------- */

.c-slider__carousel {
	margin-top: 10px;

	.c-slider__thumbnail {
		width: 12%;
		margin-right: 10px;
		padding: 0;
		border: 0;
		background: none;
	}
}

/* -----------------------------------------------------------------------------
 *
 * Slider Arrows
 *
 * ----------------------------------------------------------------------------- */

/* CASE: Arrows positioned below slider */
.c-slider--arrows-below {
	display: flex;
	flex-direction: column;

	.c-slider__main {
		order: -1;
		width: 100%;
	}
}

.c-slider__arrows {
	/* CASE: Arrows positioned below slider */
	.c-slider--arrows-below & {
		display: flex;
		justify-content: flex-end;
		margin-top: var(--spacer-40);
	}
}

.c-slider__button--prev,
.c-slider__button--next {
	/* CASE: Dialog */
	.c-dialog & {
		display: none;
		align-items: center;
		justify-content: center;
		top: 50%;
		height: 50px;
		width: 50px;
		margin-top: 0;
		border: 1px solid var(--color-white);
		background: transparent;
		color: var(--color-white);
		transition: var(--transition);
		transform: translateY(-50%);
		opacity: 0.5;

		&:before {
			display: none;
		}

		&:after {
			color: var(--color-white);
			content: var(--icon-chevron-right);
			font-family: var(--font-family-core-icons);
			font-size: 22px;
		}

		&:focus,
		&:hover {
			background-color: var(--color-white);
			opacity: 1;
			transition: var(--transition);

			&:after {
				color: var(--color-black);
			}
		}

		&:focus {
			outline: none;
		}

		@media (--viewport-full) {
			display: flex;
		}
	}

	/* CASE: Arrows positioned below slider */
	.c-slider--arrows-below & {
		display: none;
		position: static;
		top: auto;
		left: auto;
		right: auto;
		align-items: center;
		justify-content: center;
		height: 48px;
		width: 48px;
		border: 1px solid var(--swiper-navigation-color);
		background: var(--swiper-navigation-color);
		color: var(--color-white);
		transition: var(--transition);
		margin-top: 0;

		@media (--viewport-full) {
			display: flex;
		}

		&:after {
			font-size: 22px;
		}

		&:focus,
		&:hover {
			background-color: var(--color-white);
			border-color: var(--swiper-navigation-color);
			color: var(--swiper-navigation-color);
		}
	}
}

.c-slider__button--next,
.swiper-container-rtl .c-slider__button--prev {
	/* CASE: Dialog */
	.c-dialog & {
		right: -102px;

		&:after {
			content: var(--icon-chevron-right);
		}
	}
}

.c-slider__button--prev,
.swiper-container-rtl .c-slider__button--next {
	/* CASE: Dialog */
	.c-dialog & {
		left: -102px;

		&:after {
			content: var(--icon-chevron-left);
		}
	}

	/* CASE: Arrows positioned below slider */
	.c-slider--arrows-below & {
		margin-right: var(--spacer-10);
	}
}
