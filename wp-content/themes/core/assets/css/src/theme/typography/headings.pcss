/* -----------------------------------------------------------------------------
 *
 * Typography: Headings
 *
 * ----------------------------------------------------------------------------- */

/* -------------------------------------------------------------------------
 * Heading: H1
 * ------------------------------------------------------------------------- */

.h1,
:is(.t-sink) h1 {
	@mixin t-display;

	@media (--viewport-full) {
		@mixin t-display-x-large;
	}
}

/* -------------------------------------------------------------------------
 * Heading: H2
 * ------------------------------------------------------------------------- */

.h2,
:is(.t-sink) h2 {
	@mixin t-display;

	@media (--viewport-full) {
		@mixin t-display-large;
	}
}

/* -------------------------------------------------------------------------
 * Heading: H3
 * ------------------------------------------------------------------------- */

.h3,
:is(.t-sink) h3 {
	@mixin t-display-small;

	@media (--viewport-full) {
		@mixin t-display;
	}
}

/* -------------------------------------------------------------------------
 * Heading: H4
 * ------------------------------------------------------------------------- */

.h4,
:is(.t-sink) h4 {
	@mixin t-display-x-small;

	@media (--viewport-full) {
		@mixin t-display-small;
	}
}

/* -------------------------------------------------------------------------
 * Heading: H5
 * ------------------------------------------------------------------------- */

.h5,
:is(.t-sink) h5 {
	@mixin t-display-xx-small;

	@media (--viewport-full) {
		@mixin t-display-x-small;
	}
}

/* -------------------------------------------------------------------------
 * Heading: H6
 * ------------------------------------------------------------------------- */

.h6,
:is(.t-sink) h6 {
	@mixin t-overline;
}
